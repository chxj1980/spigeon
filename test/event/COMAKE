#edit-mode: -*- python -*-
#coding:utf8

#工作路径.
WORKROOT('../../../../../../../')

#使用硬链接copy.
CopyUsingHardLink(True)

#C预处理器参数.
CPPFLAGS('-D_GNU_SOURCE -D__STDC_LIMIT_MACROS -DVERSION=\\\"1.0.0.0\\\"')

#C编译参数.
CFLAGS('-g -ggdb -pipe -W -Wall -O0 -DDEBUG')

#C++编译参数.
CXXFLAGS('-g -ggdb -pipe -W -Wall -O0 -DDEBUG')

#IDL编译参数
IDLFLAGS('--compack')

#UBRPC编译参数
UBRPCFLAGS('--compack')

#头文件路径.
INCPATHS('. ../../src ../../deps/libev-4.11')

#使用库
LIBS('../../deps/libev-4.11/.libs/libev.a ../../output/lib/libstoreframework.a')

#链接参数.
LDFLAGS('-lpthread -lcrypto -lrt')

#依赖模块
CONFIGS('public/mcpack@mcpack_1-3-5-1_PD_BL')
CONFIGS('public/configure@configure_1-2-0-3_PD_BL')

user_sources=''
user_headers=''

server_sources=user_sources + ' ' + './server.cpp'
client_sources=user_sources + ' ' + './client.cpp'

Directory('../../')

Application('server',Sources(server_sources))
Application('client',Sources(client_sources))

