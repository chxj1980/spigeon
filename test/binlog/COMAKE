#edit-mode: -*- python -*-
#coding:gbk

#工作路径.
WORKROOT('../../../../../../../')

#使用硬链接copy.
CopyUsingHardLink(True)

#C预处理器参数.
CPPFLAGS('-D_GNU_SOURCE -D__STDC_LIMIT_MACROS -DVERSION=\\\"1.9.8.7\\\" -DENABLE_PROF')

#C编译参数.
CFLAGS('-g -pipe -W -Wall')

#C++编译参数.
CXXFLAGS('-g -pipe -W -Wall')

#IDL编译参数
IDLFLAGS('--compack')

#UBRPC编译参数
UBRPCFLAGS('--compack')

#头文件路径.
INCPATHS('. ../../src ../../deps/libev-4.11')

#使用库
LIBS('../../deps/libev-4.11/.libs/libev.a ../../output/lib/libstoreframework.a')

#链接参数.
LDFLAGS('-lpthread -lcrypto -lrt')

#依赖模块
CONFIGS('public/mcpack@mcpack_1-3-5-1_PD_BL')
CONFIGS('public/configure@configure_1-2-0-3_PD_BL')
CONFIGS('third-64/gtest')

user_sources=''
user_headers=''

Directory('../../')

Application('binlog_api_basic_test',Sources('binlog_api_basic_test.cpp'))
Application('binlog_api_write_test',Sources('binlog_api_write_test.cpp'))
Application('binlog_performance',Sources('binlog_performance.cpp'))
Application('binlog_bug_validation',Sources('binlog_bug_validation.cpp'))

